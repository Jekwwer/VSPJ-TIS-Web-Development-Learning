# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Bash files
[*.sh]
indent_style = space
indent_size = 4

# Configuration files
[.gitignore]
indent_style = space
indent_size = 2

# Config files YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Doxyfile
[Doxyfile]
indent_style = space
indent_size = 2

# All text-based files
[*.{txt,md,json,xml,html,js,css}]
indent_style = space
indent_size = 2
